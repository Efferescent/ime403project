{
    "manifest_version": 3,
    "name": "Text to Speech Features",
    "version": "1.1",
    "description": "Converts text to speech.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon128.png",
            "48": "images/icon128.png",
            "128": "images/icon128.png"
        }
    },
    "permissions": ["activeTab", "tts"],
    "icons": {
        "16": "images/icon128.png",
        "48": "images/icon128.png",
        "128": "images/icon128.png"
    }
}
