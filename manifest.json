{
    "manifest_version": 3,
    "name": "Text to Speech",
    "version": "1.0",
    "description": "Converts text to speech.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon128.png",
        "48": "images/icon128.png",
        "128": "images/icon128.png"
      }
    },
    "permissions": ["activeTab", "tts"],
    "icons": {
      "16": "images/icon128.png",
      "48": "images/icon128.png",
      "128": "images/icon128.png"
    }
  }
  